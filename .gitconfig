[user]
    name = Florian Wallner
    email = wallner@hey.com
[color]
    ui = auto
[core]
    pager = delta
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/wallner/.gitexcludes
    autocrlf = input
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    features = Catppuccin Frappe
    line-numbers = true
    navigate = true
[delta "interactive"]
    keep-plus-minus-markers = false
[merge]
    conflictstyle = diff3
[branch]
    autosetuprebase = always
[push]
    default = current
[alias]
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    ls = log --decorate --pretty=oneline --abbrev-commit
    br = branch
    co = checkout
    st = status
    rb = rebase
    fa = fetch --all
    yolo = commit -a --amend --no-edit
[init]
    defaultBranch = main
[pull]
    rebase = true
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
